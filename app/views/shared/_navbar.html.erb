  <div class="flex justify-between items-center text-gold h-[15vh] border-b-2 border-gold p-2">
    <%= link_to root_path do %>
      <div class="flex justify-start items-center">
        <%= image_tag("logo.png", class: "pr-2 border-r-2 border-gold w-[20%]") %>
        <h1 class="pl-2 text-6xl">CrateCurate</h1>
      </div>
    <% end %>
    <div class="flex justify-end items-center text-3xl">
      <% if authenticated? %>
        <%= link_to "Create Set", new_playlist_path, class: "ml-6 hover:font-bold" %>
        <%= link_to "Profile", user_path(Current.user), class: "ml-6 hover:font-bold"  %>
        <%= button_to "Log out", session_path, method: :delete, class: "ml-6 hover:font-bold"  %>
      <% else %>
        <%= link_to "Sign Up", new_registration_path, class: "ml-6 hover:font-bold"  %>
        <%= link_to "Sign In", new_session_path, class: "ml-6 hover:font-bold"  %>
      <% end %>
    </div>
  </div>
